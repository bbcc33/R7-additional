<%= form_with model: @order do |form| %>
    <div>
        <%= form.label :customer_id, "Select Customer" %>
        <%= form.collection_select :customer_id, Customer.all, :id, :full_name, prompt: "Choose a customer" %>
    </div>

<%# <%= form_with(model: order, local: true) do |form| %>
    <div class ="field">
        <%# Ruby takes this attribute and with form.label makes a title on the webpage %>
        <%= form.label :product_name %>
        <%= form.text_field :product_name %>
    </div>

    <div class ="field">
        <%= form.label :product_count %>
        <%= form.number_field :product_count %>
    </div>


    <div class="actions">
        <%= form.submit %>
    </div>
<% end %>